<div class="row">
  <div class="col-sm-3">
    <%= render 'layouts/side', { daily_clear: @daily_clear, daily_clear_status: @daily_clear_status, mission: @mission, user:current_user } %>
  </div>

  <div class="col-sm-9 pr-5">
    <h2 class="left">Calendar</h2><br>
    <div class="line "></div>

    <div class="">
      <%= form_with model: @calendar, local: true do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <table class="row mr-0 ml-0">
          <tbody class="col-sm-12">
            <tr class="row mr-0 ml-0">
              <td class="col-sm-4 pt-1"><p>開始日時<%= f.datetime_field :start_date, class: "ml-2" %></p></td>
              <td class="col-sm-6"><%= f.text_field :title, class: "col-sm-12 btn_ou" %></td>
              <td class="col-sm-2"><%= f.submit "+", class: "btn" %></td>
            </tr>
            <tr class="row mr-0 ml-0">
              <td class="col-sm-4 pt-1"><p>開始日時<%= f.datetime_field :end_date, class: "ml-2"  %></p></td>
              <td class="col-sm-6"><%= f.text_field :description, class: "col-sm-12 btn_ou" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div><br>

    <div class="line"></div>

    <div class="row mr-0 ml-0">
      <div class="col-sm-10 offset-sm-1">
         <div id="calendar"></div>
      </div>
    </div>

  </div>
</div>


