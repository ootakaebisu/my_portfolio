<div class="row">
  <div class="col-sm-8"></div>

  <div class="col-sm-4">
    <div class="row mr-0 ml-0">
      <div class="col-sm-11">
          <div class="totsu">

            <h2 class="text-center">Log in</h2>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row field pl-4 pr-4 mb-2">
                <%= f.label :ユーザーID %><br />
                <%= f.text_field :my_id, autofocus: true, autocomplete: "my_id", class: "col-sm-12 btn_ou"  %>
              </div>

              <div class="row field pl-4 pr-4 mb-2">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-12 btn_ou"  %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="row field pl-4 pr-4 mb-2">
                  <div>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>

                </div>
              <% end %>

              <div class="actions text-center mb-2">
                <%= f.submit "Log in", class: "btn"  %>
              </div>
            <% end %>

            <div class="text-center">
              <%= link_to "新規登録はこちら", new_user_registration_path %>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>

