<div class="row">
  <div class="col-sm-1 writing-mode pl-4 pr-4">
    <p class="writing-mode-text">TimeAttack&Record Application</p>
  </div>
  
  <div class="col-sm-7">
   <img src="/img/view6.jpg" width="100%">
  </div>
  

  <div class="col-sm-4">
    <div class="row mr-0 ml-0">
      <div class="col-sm-11">
          <div class="totsu">

            <h2 class="text-center">Log in</h2>
            
            <div class="actions text-center mb-2 pl-2 pr-2">
              <%= link_to "Googleログインはこちら", user_google_oauth2_omniauth_authorize_path, class: "btn color-1 col-sm-12" %>
            </div>
            
            <div class="line"></div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row field pl-4 pr-4 mb-2">
                <%= f.label :ユーザーID %><br />
                <%= f.text_field :my_id, autofocus: true, autocomplete: "my_id", class: "col-sm-12 btn_ou"  %>
              </div>

              <div class="row field pl-4 pr-4 mb-2">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "col-sm-12 btn_ou"  %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="row field pl-4 pr-4 mb-2">
                  <div>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>

                </div>
              <% end %>

              <div class="actions text-center mb-2">
                <%= f.submit "Log in", class: "btn"  %>
              </div>
            <% end %>

            <div class="text-center">
              <%= link_to "新規登録はこちら", new_user_registration_path %>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>

