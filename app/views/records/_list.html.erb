<!--表示/Recordデータ-->
<% if records.present? %>
  <% records.each do |record| %>
    <table class="row mr-0 ml-0">
      <tbody class="col-sm-12 pl-0 pr-0">
        <tr id="record-<%= record.id %>" class="row mr-0 ml-0">
          <td class="col-sm-9 pl-2 pr-1 pt-3 pb-2"><%= record.title %></td>
          <td class="col-sm-3 pl-1 pr-1 pt-3 pb-2 text-center"><%= link_to '×', record_path(record.id), method: :delete, remote: true %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% end %>