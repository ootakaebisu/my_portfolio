<div class="row">
  <div class="col-sm-3">
    <%= render 'layouts/side', { daily_clear: @daily_clear, daily_clear_status: @daily_clear_status, mission: @mission_side, user: @user } %>
  </div>

  <div class="col-sm-9 pr-5">
    <h2 class="left">Public Page</h2>

    <div class="right">
      <% if @user.id == current_user.id %>
      	<%= link_to 'Edit', edit_user_path(id: @user, order_sort: "0"), class: "btn" %>
      <% else %>
      	<% if current_user.following?(@user) %>
          <%= link_to 'フォロー外す', unfollow_path(@user.id), method: :POST, class: "btn" %>
        <% else %>
          <%= link_to 'フォローする', follow_path(@user.id), method: :POST, class: "btn" %>
        <% end %>
      <% end %>
    </div>

    <div class="line mt-2"></div>

    <%= render "user", { user: @user, mission: @mission, records: @records } %><br>

    <div class="line mt-2"></div>


      <% if @user.content.present? %>
        <div class="col-sm-2">プロフィール</div>
        <div class="col-sm-10"><%= @user.content %></div>
      <% end %>



    <% unless @user.id == current_user.id %>
    <div class="d-flex justify-content-center">
      <%= link_to 'ユーザー一覧へ', users_path, class: "btn" %>
    </div>
    <% end %>

  </div>
</div>




